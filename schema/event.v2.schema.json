{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authoritarian Risk Event v2",
  "type": "object",
  "required": [
    "id",
    "date",
    "category",
    "title",
    "severity",
    "impact",
    "source_url",
    "summary",
    "confidence"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "category": {
      "type": "string",
      "enum": [
        "leader_cult",
        "state_capture",
        "suppression",
        "propaganda",
        "militarization",
        "removal",
        "rule_of_law"
      ]
    },
    "subtags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "actor": {
      "type": "string",
      "enum": [
        "executive",
        "legislative",
        "judiciary",
        "state_local"
      ]
    },
    "agency": {
      "type": "string"
    },
    "constitution": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "rights implicated: speech, assembly, due_process, equal_protection"
    },
    "trigger_type": {
      "type": "string",
      "enum": [
        "initiation",
        "response",
        "escalation"
      ],
      "default": "initiation"
    },
    "lag_days": {
      "type": "integer",
      "minimum": 0
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "extreme"
      ]
    },
    "impact": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "impact_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "confidence": {
      "type": "string",
      "enum": [
        "primary",
        "confirmed",
        "analysis"
      ]
    },
    "corroboration_count": {
      "type": "integer",
      "minimum": 1
    },
    "source_outlet": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "source_bias": {
      "type": "string"
    },
    "geo_state": {
      "type": "string",
      "description": "Two-letter code if US state"
    },
    "geo_city": {
      "type": "string"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "arrests": {
      "type": "integer",
      "minimum": 0
    },
    "troop_count": {
      "type": "integer",
      "minimum": 0
    },
    "detention_capacity_change": {
      "type": "integer"
    },
    "summary": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}