{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Authoritarian Risk Event v2",
  "type": "object",
  "required": [
    "id",
    "date",
    "category",
    "title",
    "severity",
    "impact",
    "source_url",
    "summary",
    "confidence"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "category": {
      "type": "string",
      "enum": [
        "leader_cult",
        "state_capture",
        "suppression",
        "propaganda",
        "militarization",
        "removal",
        "rule_of_law"
      ]
    },
    "actor": {
      "type": "string",
      "enum": [
        "executive",
        "legislative",
        "judiciary",
        "state_local"
      ]
    },
    "agency": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "extreme"
      ]
    },
    "impact": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "confidence": {
      "type": "string",
      "enum": [
        "primary",
        "confirmed",
        "analysis"
      ]
    },
    "corroboration_count": {
      "type": "integer",
      "minimum": 1
    },
    "source_outlet": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "geo_state": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    }
  },
  "additionalProperties": true
}