{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "date",
    "category",
    "title",
    "severity",
    "impact",
    "source_url",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "category": {
      "type": "string",
      "enum": [
        "leader_cult",
        "state_capture",
        "suppression",
        "propaganda",
        "militarization",
        "removal",
        "rule_of_law"
      ]
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "extreme"
      ]
    },
    "impact": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "source_outlet": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "summary": {
      "type": "string"
    }
  },
  "additionalProperties": false
}